<body>
        <!-- Page header with logo and tagline-->
        <header class="py-5 border-0 mb-4 shadow p-3 mb-5 bg-warning rounded">
            <div class="container text-secondary-emphasis">
                <div class="text-center my-5">
                    <h1 class="fw-bolder">Welcome to Blog Home!</h1>
                    <p class="lead mb-0">A Bootstrap 5 starter layout for your next blog homepage</p>
                </div>
            </div>
        </header>
        <!-- Page content-->
        <div class="container">
            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-12">
                    <!-- Featured blog post-->
                    <div class="card mb-4 border-0 shadow p-3 mb-5 bg-body-tertiary rounded">
                        <a href="#!"><img class="w-100" src="https://picsum.photos/id/84/900/600" style=" height: 500px"/></a>
                        <div class="card-body">
                            <div class="small text-muted">January 1, 2023</div>
                            <h2 class="card-title">Featured Post Title</h2>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                            <a class="btn btn-primary" href="#!">Read more â†’</a>
                        </div>
                    </div>
                </div>

            
                    <!-- Nested row for non-featured blog posts-->
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Blog post-->
                            <div class="results row">
                                <% @results.each do |result| %>
                                    <% if result.is_a?(Product) %>
                                        <div class="product col-md-6 mb-4">
                                            <div class="card h-100 border-0 shadow p-3 mb-5 bg-body-tertiary rounded">
                                                <a href="#!"><img class="w-100" src="https://picsum.photos/id/73/900/600" style=" height: 300px"/></a>
                                                <div class="card-body">
                                                    <div class="small text-muted">January 1, 2023</div>
                                                    <h2 class="card-title h4"><%= result.name %></h2>
                                                    <p class="card-text"><%= result.description %></p>
                                                    <%= link_to 'Read more', user_product_path(result.owner_id, result), class: "btn btn-primary" %>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                         <!-- Side widgets-->
                        <div class="col-lg-4 position-sticky h-100" style="position: sticky; position: -webkit-sticky;">
                            <!-- Product Search widget-->
                            <div class="card mb-4 border-0 shadow p-3 mb-5 bg-body-tertiary rounded">
                                <div class="card-header border-0">Search products by name</div>
                                <div class="card-body">
                                    <div class="input-group d-flex">
                                        <%= search_form_for @q_products, url: :root do |f| %>
                                            <%= f.search_field :name_cont, class: "w-90 border-0 p-2", placeholder: 'Search here...' %>
                                            <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                                                <i class="bi bi-send"></i>
                                            <% end %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                            <!-- Categories widget-->
                            <div class="card mb-4 border-0 shadow p-3 mb-5 bg-body-tertiary rounded">
                                <div class="card-header border-0">Categories</div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <ul class="list-unstyled mb-0">
                                                <% @categories.each do |el|%>
                                                    <li><a href="#!"><%= el.name %></a></li>
                                                <% end %>
                                            </ul>
                                        </div>
                                        <div class="col-sm-6">
                                            <ul class="list-unstyled mb-0">
                                                <% @categories.each do |el|%>
                                                    <li><a href="#!"><%= el.name %></a></li>
                                                <% end %>
                                            </ul>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <!-- Side widget-->
                            <div class="card mb-4 border-0 shadow p-3 mb-5 bg-body-tertiary rounded">
                                <div class="card-header border-0">Side Widget</div>
                                <div class="card-body">You can put anything you want inside of these side widgets. They are easy to use, and feature the Bootstrap 5 card component!</div>
                            </div>
                        </div>
                    </div>

                

                            <!-- Pagination-->
                        <nav aria-label="Pagination">
                            <hr class="my-0" />
                            <ul class="pagination justify-content-center my-4">
                                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                                <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                                <li class="page-item"><a class="page-link" href="#!">2</a></li>
                                <li class="page-item"><a class="page-link" href="#!">3</a></li>
                                <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                                <li class="page-item"><a class="page-link" href="#!">15</a></li>
                                <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                            </ul>
                        </nav>
                    </div>
        </div>

        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
