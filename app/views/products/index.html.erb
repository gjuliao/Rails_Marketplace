<h1>All Products</h1>


    <div class="container">
        <!-- Row -->
        <div class="row">
        <% @products.each do |product| %>
            <div class="col-sm-3 col-12 text-center justify-content-center my-3">
                <!-- Card -->
                <div class="card">
                    <img src="..." class="card-img-top" alt="...">
                    <!-- Card body -->
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <h5 class="card-title"><%= link_to 'View Product', user_product_path(current_user, product) %></h5>
                        <div class="d-flex justify-content-between">
                             <div>
                                <% if current_user %>
                                    <%= link_to edit_user_product_path(current_user, product), class: 'mx-2' do %>
                                        <i class="bi bi-pencil-square" style="font-size: 1rem; color: blue;"></i>
                                    <% end %>
                                    <%= link_to user_product_path(current_user, product), method: :delete, data: { confirm: 'Are you sure?' } do %>
                                        <i class="bi bi-trash" style="font-size: 1rem; color: red;"></i>
                                    <% end %>
                                <% end %>
                            </div>
                            <div class="d-flex flex-row-reverse align-items-center">
                                <h6 class="card-subtitle text-body-secondary">
                                    <i class="bi bi-people mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.assistants %> 
                                </h6>
                                <h6 class="card-subtitle text-body-secondary"> 
                                    <i class="bi bi-hand-thumbs-up mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.likes.count %> 
                                </h6>
                                <h6 class="card-subtitle text-body-secondary">
                                    <i class="bi bi-chat-left-dots mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.comments.count %> 
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    </div>