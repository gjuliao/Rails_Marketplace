    <div class="container my-5">
        <!-- Row -->
        <div class="row">
        <% @products.each do |product| %>
            <div class="col-sm-4 col-12 justify-content-center my-3">
                <!-- Card -->
                <div class="card">
                    <a href="#!"><img class="card-img-top" src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." /></a>
                    <!-- Card body -->
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p><%= link_to 'Learn more', user_product_path(current_user, product), style: 'text-decoration: none;' %></p>
                        <div class="d-flex justify-content-between">
                             <div>
                                <% if current_user %>
                                    <%= link_to edit_user_product_path(current_user, product), class: 'mx-2', style: 'text-decoration: none;' do %>
                                        <i class="bi bi-pencil-square" style="font-size: 1rem; color: blue;"></i>
                                    <% end %>
                                    <%= link_to user_product_path(current_user, product), method: :delete, data: { confirm: 'Are you sure?' } do %>
                                        <i class="bi bi-trash" style="font-size: 1rem; color: red;"></i>
                                    <% end %>
                                <% end %>
                            </div>
                            <div class="d-flex flex-row-reverse align-items-center">
                                <h6 class="card-subtitle text-body-secondary">
                                    <i class="bi bi-people mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.assistants %> 
                                </h6>
                                <h6 class="card-subtitle text-body-secondary"> 
                                    <i class="bi bi-hand-thumbs-up mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.likes.count %> 
                                </h6>
                                <h6 class="card-subtitle text-body-secondary">
                                    <i class="bi bi-chat-left-dots mx-2" style="font-size: 1rem; color: blue;"></i>
                                    <%= product.comments.count %> 
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    </div>